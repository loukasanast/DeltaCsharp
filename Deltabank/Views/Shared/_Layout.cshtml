<!DOCTYPE>
    <html>
        <head>
            <meta charset="utf-8" />
            <meta lang="de" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Deltabank - @ViewBag.Title</title>
            <link href="~/css/main.less" rel="stylesheet/less" type="text/css" />
            <script src="https://cdnjs.cloudflare.com/ajax/libs/less.js/2.7.1/less.min.js"></script>
        </head>
        <body>
            <section id="wrapper">
                <header>
                    <section class="cont">
                        <a href="~/"><img src="~/img/logo.png" alt="" /></a>
                        <nav>
                            Weitere Informationen zu Deltabank Online-Banking
                            <a href="javascript:void(0)">Rechtshinweise</a> | 
                            <a href="javascript:void(0)">Impressum</a> | 
                            <a href="javascript:void(0)">Bedienungshilfen</a> | 
                            <a href="javascript:void(0)">Newsletter</a>
                        </nav>
                    </section>
                </header>
                <main>
                    <section class="cont">
                        @RenderBody()
                    </section>
                </main>
                <footer>
                    <section class="cont">
                        &copy; 2017 Deutsche Deltabank AG
                    </section>
                </footer>
            </section>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
            <script>
                (function () {
                    'use strict';
                    $('.zeit-sel').click(function () {
                        $('.zeit-sel ul').toggle();
                    });
                    $('.alle-umsaetze').click(function () {
                        $('.umsaetze-tbl').toggle();
                        $('.zeit-sel').toggle();
                    });
                }());
            </script>
        </body>
    </html>